{
    "manifest_version": 2,
    "name": "Browser Actogram",
    "version": "1.0.0",
    "description": "Track browser activity and visualize it as an actogram for sleep/wake cycle analysis",
    "permissions": [
        "idle",
        "storage",
        "alarms"
    ],
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "storage-manager.js",
            "analysis-utils.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}